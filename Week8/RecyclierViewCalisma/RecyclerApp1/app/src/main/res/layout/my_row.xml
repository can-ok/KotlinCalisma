<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
                                             android:layout_height="150dp"
android:orientation="horizontal">


    <ImageView
            android:layout_width="16dp"
            android:layout_height="85dp" tools:srcCompat="@tools:sample/avatars" android:id="@+id/imageView"
            android:layout_weight="1"
            android:layout_marginLeft="30dp"/>
    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView_prodname" android:layout_weight="1"
    android:layout_marginTop="50dp"
    android:layout_marginLeft="50dp"
    android:textSize="18sp"/>
    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textview_price" android:layout_weight="1"
            android:layout_marginTop="50dp"
            android:layout_marginLeft="80dp"
            android:textSize="18sp"/>
</LinearLayout>