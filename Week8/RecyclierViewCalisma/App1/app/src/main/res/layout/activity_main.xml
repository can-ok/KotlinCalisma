<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView_name"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="496dp" android:layout_marginStart="248dp"/>
    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView_salary"
            app:layout_constraintStart_toStartOf="@+id/textView_name"
            android:layout_marginTop="108dp" android:layout_marginStart="3dp"
            app:layout_constraintTop_toBottomOf="@+id/textView_name"/>
    <Button
            android:text="Find"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button_find" android:layout_marginTop="151dp"
            app:layout_constraintTop_toBottomOf="@+id/editText_id" android:layout_marginEnd="13dp"
            app:layout_constraintEnd_toEndOf="@+id/editText_id"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:text="Name"
            android:ems="10"
            android:id="@+id/editText_id"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="156dp" android:layout_marginStart="128dp"/>
</android.support.constraint.ConstraintLayout>