<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <android.support.v7.widget.GridLayout
            android:layout_width="596dp"
            android:layout_height="0dp"
            android:id="@+id/gridLayout"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="231dp" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginBottom="31dp" app:layout_constraintBottom_toTopOf="@+id/button">

        <ImageView
                android:layout_width="198dp"
                android:layout_height="188dp" app:srcCompat="@drawable/kenny" app:layout_row="1"
                android:onClick="increaseScore"
                app:layout_column="2" android:id="@+id/imageView5"/>
        <ImageView
                android:layout_width="198dp"
                android:layout_height="188dp" app:srcCompat="@drawable/kenny" app:layout_row="1"
                android:onClick="increaseScore"

                app:layout_column="1" android:id="@+id/imageView4"/>
        <ImageView
                android:layout_width="198dp"
                android:layout_height="188dp" app:srcCompat="@drawable/kenny" app:layout_row="1"
                android:onClick="increaseScore"

                app:layout_column="0" android:id="@+id/imageView6"/>
        <ImageView
                android:layout_width="198dp"
                android:layout_height="188dp" app:srcCompat="@drawable/kenny" app:layout_row="2"
                android:onClick="increaseScore"

                app:layout_column="0" android:id="@+id/imageView3"/>
        <ImageView
                android:layout_width="198dp"
                android:layout_height="188dp" app:srcCompat="@drawable/kenny" app:layout_row="2"
                android:onClick="increaseScore"

                app:layout_column="1" android:id="@+id/imageView7"/>
        <ImageView
                android:layout_width="198dp"
                android:layout_height="188dp" app:srcCompat="@drawable/kenny" app:layout_row="2"
                android:onClick="increaseScore"

                app:layout_column="2" android:id="@+id/imageView8"/>
        <ImageView
                android:layout_width="198dp"
                android:layout_height="188dp" app:srcCompat="@drawable/kenny" app:layout_row="0"
                android:onClick="increaseScore"

                app:layout_column="1" android:id="@+id/imageView1"/>
        <ImageView
                android:layout_width="198dp"
                android:layout_height="188dp" app:srcCompat="@drawable/kenny" app:layout_row="0"
                android:onClick="increaseScore"

                app:layout_column="2" android:id="@+id/imageView2"/>
        <ImageView
                android:layout_width="198dp"
                android:layout_height="188dp" app:srcCompat="@drawable/kenny" app:layout_row="0"
                android:onClick="increaseScore"
                app:layout_column="0" android:id="@+id/imageView0"/>
    </android.support.v7.widget.GridLayout>
    <TextView
            android:text="Time:10"
            android:layout_width="98dp"
            android:layout_height="27dp"
            android:id="@+id/textViewTimer"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="248dp" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/gridLayout" app:layout_constraintVertical_bias="0.484"
            android:textAlignment="center" android:textSize="18sp"/>
    <TextView
            android:text="Score:0"
            android:layout_width="94dp"
            android:layout_height="55dp"
            android:id="@+id/textViewScore" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintTop_toTopOf="parent" android:textSize="24sp" android:textAlignment="viewStart"/>
    <Button
            android:text="Retry"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginStart="195dp" app:layout_constraintTop_toBottomOf="@+id/gridLayout"
            android:layout_marginBottom="55dp" android:onClick="retryclick"/>
</android.support.constraint.ConstraintLayout>