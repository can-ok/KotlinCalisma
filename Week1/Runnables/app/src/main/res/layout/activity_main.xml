<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <TextView
            android:layout_width="115dp"
            android:layout_height="66dp"
            android:text="Hello World!"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintHorizontal_bias="0.428"
            app:layout_constraintVertical_bias="0.096" android:id="@+id/TextView"
            android:textAlignment="center" android:textSize="18sp"/>
    <Button
            android:text="Start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnstr" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="326dp" android:layout_marginEnd="58dp"
            app:layout_constraintEnd_toEndOf="parent" android:onClick="start"/>
    <Button
            android:text="Restart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnstp" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBaseline_toBaselineOf="@+id/btnstr"
            android:layout_marginStart="61dp" android:onClick="Restart"/>

</android.support.constraint.ConstraintLayout>